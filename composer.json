{
    "name": "glueful/email-notification",
    "description": "Provides email notification capabilities using Symfony Mailer",
    "type": "glueful-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Tawiah Sowah",
            "email": "michael@glueful.dev"
        }
    ],
    "keywords": ["notifications", "communication", "email", "smtp"],
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "symfony/mailer": "^6.3 || ^7.0",
        "symfony/mime": "^6.3 || ^7.0"
    },
    "require-dev": {
        "glueful/framework": "dev-main",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "${GLUEFUL_PATH}"
        }
    ],
    "homepage": "https://github.com/glueful/email-notification",
    "autoload": {
        "psr-4": {
            "Glueful\\Extensions\\EmailNotification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glueful\\Extensions\\EmailNotification\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=Squiz src",
        "phpcbf": "vendor/bin/phpcbf --standard=Squiz src",
        "analyze": "vendor/bin/phpstan analyze src --level=5",
        "build": "php scripts/build.php",
        "deploy": "php scripts/deploy.php"
    },
    "extra": {
        "glueful": {
            "name": "EmailNotification",
            "displayName": "Email Notification",
            "description": "Provides email notification capabilities using Symfony Mailer",
            "version": "1.1.2",
            "icon": "assets/icon.png",
            "galleryBanner": {
                "color": "#3064D0",
                "theme": "dark"
            },
            "categories": ["notifications", "communication"],
            "publisher": "glueful-team",
            "provider": "Glueful\\Extensions\\EmailNotification\\EmailNotificationServiceProvider",
            "requires": {
                "glueful": ">=1.7.1",
                "extensions": []
            }
        }
    },
    "suggest": {
        "twig/twig": "^3.0 for EnhancedEmailFormatter",
        "symfony/http-client": "^6.3 for API mail transports",
        "symfony/postmark-mailer": "Install if using Postmark",
        "symfony/mailgun-mailer": "Install if using Mailgun",
        "symfony/amazon-mailer": "Install if using Amazon SES",
        "symfony/sendgrid-mailer": "Install if using SendGrid",
        "symfony/brevo-mailer": "Install if using Brevo/Sendinblue"
    },
    "config": {
        "sort-packages": true
    }
}
